<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>News Widget</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .news-widget {
      max-width: 400px;
      margin: auto;
      border: 1px solid #ccc;
      border-radius: 8px;
      padding: 15px;
      box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }
    .news-item {
      border-bottom: 1px solid #eee;
      padding: 10px 0;
    }
    .news-title {
      font-size: 16px;
      font-weight: bold;
    }
    .news-link {
      color: blue;
      text-decoration: none;
    }
    .news-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>

  <div class="news-widget">
    <h3>Latest News</h3>
    <div id="news-container">Loading...</div>
  </div>

  <script>
    const API_KEY = "your_actual_access_key_here"; // Replace with your real API key
    const NEWS_API_URL = `https://api.mediastack.com/v1/news?access_key=${API_KEY}&countries=us&languages=en&limit=5`;

    async function fetchNews() {
      try {
        const response = await fetch(NEWS_API_URL);
        if (!response.ok) throw new Error("Failed to fetch news.");
        const data = await response.json();
        displayNews(data.data);
      } catch (error) {
        document.getElementById("news-container").innerText = "Error loading news.";
        console.error("Error:", error);
      }
    }

    function displayNews(newsList) {
      const container = document.getElementById("news-container");
      container.innerHTML = "";
      newsList.forEach(news => {
        const item = document.createElement("div");
        item.className = "news-item";
        item.innerHTML = `
          <div class="news-title">${news.title}</div>
          <a href="${news.url}" target="_blank" class="news-link">Read more</a>
        `;
        container.appendChild(item);
      });
    }

    fetchNews();
  </script>

</body>
</html>
